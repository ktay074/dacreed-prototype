generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Post {
  id        String   @id @default(cuid())
  createdAt DateTime @default(now())
  content   String
  authorId  String

  @@index([authorId])
}

model Document {
  id           String      @id @default(cuid())
  createdAt    DateTime    @default(now())
  org_content  String
  org_name     String
  org_type     String
  org_size     Int
  authorId     String      @default("authorId")
  coursePref   CoursePref?
  @@index([authorId])
}

model CoursePref {
  id                  String    @id @default(cuid())
  simplicityPref      Int[]     @default([])
  humourPref          Int[]     @default([])
  professionalismPref Int[]     @default([])
  documentId          String @unique
  document            Document  @relation(fields: [documentId], references: [id])
}

model User {
  id        String   @id
  createdAt DateTime @default(now())
  username  String
  courses   Course[] @relation("CourseToUser")

  @@index([id])
}

model Course {
  id        String   @id @default(cuid())
  createdAt DateTime @default(now())
  updatedAt DateTime @default(now())
  authorId  String
  title     String
  duration  DateTime
  passValue Int      @default(80)
  nodes     Node[]
  users     User[]   @relation("CourseToUser")

  @@index([title])
}

model Node {
  id            String         @id @default(cuid())
  createdAt     DateTime       @default(now())
  updatedAt     DateTime       @default(now())
  courseId      String
  title         String
  description   String
  learningPrefs LearningPref[]
  course        Course         @relation(fields: [courseId], references: [id])

  @@index([title])
}

model LearningPref {
  id     String @id
  name   String
  nodeId String
  Node   Node   @relation(fields: [nodeId], references: [id])
}



model Events {
  id           String @id
  timeZone     String
  region       String
  country      String
  page         String
  timeSpent    Int
  scrolling    Int
  mouseClicks  Int
  buttonClicks Int
  linkClicks   Int
  mouseMoveInt Int
  keyClicks    Int
}
