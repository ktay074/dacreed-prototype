generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Post {
  id        String   @id @default(cuid())
  createdAt DateTime @default(now())
  content   String
  authorId  String

  @@index([authorId])
}

model Document {
  id        String   @id
  createdAt DateTime @default(now())
  content   String
  authorId  String
  file      Bytes

  @@index([authorId])
}

model User {
  id        String   @id @default(cuid())
  createdAt DateTime @default(now())
  username  String
  Course    Course[] @relation("CourseToUser")

  @@index([id])
}

model Course {
  id        String   @id
  createdAt DateTime @default(now())
  updatedAt DateTime @default(now())
  authorId  String
  title     String
  duration  DateTime
  passValue Int      @default(80)
  Node      Node[]
  User      User[]   @relation("CourseToUser")

  @@index([title])
}

model Node {
  id           String         @id
  createdAt    DateTime       @default(now())
  updatedAt    DateTime       @default(now())
  courseId     String
  title        String
  description  String
  LearningPref LearningPref[]
  Course       Course         @relation(fields: [courseId], references: [id])

  @@index([title])
}

model LearningPref {
  id     String @id
  name   String
  nodeId String
  Node   Node   @relation(fields: [nodeId], references: [id])
}
