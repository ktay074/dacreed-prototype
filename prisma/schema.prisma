generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Post {
  id        String   @id @default(cuid())
  createdAt DateTime @default(now())
  content   String
  authorId  String

  @@index([authorId])
}

model Document {
  id        String   @id @default(cuid())
  createdAt DateTime @default(now())
  content   Bytes
  authorId  String   @default("authorId")

  @@index([authorId])
}

model User {
  id        String   @id
  createdAt DateTime @default(now())
  username  String
  courses   Course[] @relation("CourseToUser")

  @@index([id])
}

model Course {
  id        String   @id @default(cuid())
  createdAt DateTime @default(now())
  updatedAt DateTime @default(now())
  authorId  String
  title     String
  duration  DateTime
  passValue Int      @default(80)
  nodes     Node[]
  users     User[]   @relation("CourseToUser")

  @@index([title])
}

model Node {
  id            String         @id @default(cuid())
  createdAt     DateTime       @default(now())
  updatedAt     DateTime       @default(now())
  courseId      String
  title         String
  description   String
  learningPrefs LearningPref[]
  course        Course         @relation(fields: [courseId], references: [id])

  @@index([title])
}

model LearningPref {
  id     String @id @default(cuid())
  name   String
  nodeId String
  node   Node   @relation(fields: [nodeId], references: [id])
}

model Events {
  id           String @id @default(cuid())
  timeZone     String
  region       String
  country      String
  page         String
  timeSpent    Int
  scrolling    Int
  mouseClicks  Int
  buttonClicks Int
  linkClicks   Int
  mouseMoveInt Int
  keyClicks    Int
}

model CoursePref {
  id                  String @id @default(cuid())
  simplicityPref      Int[]  @default([])
  humourPref          Int[]  @default([])
  proffesionalismPref Int[]  @default([])
}
